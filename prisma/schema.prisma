generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/prisma"
  moduleFormat  = "esm"
}

datasource db {
  provider = "postgresql"
}

enum FileType {
  IMAGE
  VIDEO
  PDF
  AUDIO
}

enum SubscriptionTier {
  FREE
  SILVER
  GOLD
  DIAMOND
}

model Admin {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SubscriptionPackage {
  id               String           @id @default(uuid())
  name             SubscriptionTier @unique
  price            Int
  maxFolders       Int
  maxNestingLevel  Int
  allowedFileTypes FileType[]
  maxFileSizeMB    Float
  totalFileLimit   Int
  filesPerFolder   Int
  isActive         Boolean          @default(true)
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  userSubscriptions UserSubscription[]
}

model User {
  id                  String    @id @default(uuid())
  email               String    @unique
  password            String
  firstName           String
  lastName            String
  phone               String?
  isEmailVerified     Boolean   @default(false)
  emailVerifyToken    String?
  passwordResetToken  String?
  passwordResetExpiry DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  subscriptions UserSubscription[]
  folders       Folder[]
  files         File[]
}

model OtpLog {
  id        String   @id @default(uuid())
  email     String
  purpose   String
  sentAt    DateTime @default(now())
  ip        String?
  success   Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserSubscription {
  id        String    @id @default(uuid())
  userId    String
  packageId String
  startDate DateTime  @default(now())
  endDate   DateTime?
  isActive  Boolean   @default(true)

  user    User                @relation(fields: [userId], references: [id])
  package SubscriptionPackage @relation(fields: [packageId], references: [id])

  @@index([userId, isActive])
}

model Folder {
  id        String   @id @default(uuid())
  name      String
  userId    String
  parentId  String? // null = root folder
  depth     Int      @default(0) // 0 = root
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id])
  parent   Folder?  @relation("FolderHierarchy", fields: [parentId], references: [id])
  children Folder[] @relation("FolderHierarchy")
  files    File[]

  @@unique([userId, parentId, name]) // no duplicate names in same parent
  @@index([userId])
  @@index([parentId])
}

model File {
  id           String   @id @default(uuid())
  name         String
  originalName String
  userId       String
  folderId     String
  fileType     FileType
  mimeType     String
  sizeMB       Float
  storageKey   String // S3 key or local path
  storageUrl   String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  folder Folder @relation(fields: [folderId], references: [id])

  @@index([userId])
  @@index([folderId])
}
